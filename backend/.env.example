# Connect to Supabase via connection pooling
DATABASE_URL="postgresql://username:password@host:5432/database"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://username:password@host:5432/database"

# Server Configuration
PORT=3002

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-64-characters-long-use-crypto-random
JWT_EXPIRES_IN=7d              # example: 7 days

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3003,http://localhost:3000

# Production Example:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Resend Email Configuration (for password reset)
RESEND_API_KEY=re_xxxxxxxxxxxx
FROM_EMAIL=onboarding@resend.dev

# App URL (for password reset links)
APP_URL=http://localhost:3000
